/* colors */
$wine = #AF1866
$blue = #1A69B5

@import "utils"

/* reset */
*
  box-sizing border-box
  margin 0
  padding 0
  
iframe
  border none
  
:link, :visited
  color inherit
  text-decoration none

html
  height 100%
  width 100%

body
  font-family -apple-system, Helvetica, Arial, sans-serif
  font-size 16px
  min-height 100%
  width 100%
  
  --wine #AF1866
  --blue #1A69B5

@import "ractives"

// navigation
nav
  background #FAFAFA
  border-right 1px solid #AAA
  padding .5em
  width 20%
  height 100vh
  
  position fixed
  overflow-y auto
  
#logo
  display block
  margin 1em auto
  width 50%
  
nav > ul > li
  color $blue
  font-size 1.5rem
  padding .2em .5em
  
  > ul
    color #333
    list-style-type none
    margin-left 1em
  
main
  line-height 1.5
  padding 1em
  position absolute
  left 20%
  width 80%

  :link, :visited
    color $blue
    font-weight bold

// headers
h1
  margin 1em 0 .5em
  
h2
  margin 1em 0 .5em

h3
  margin 1em 0 .5em

h4
  margin 1em 0 .5em
  
main p
  margin .5em 0
  
dfn
  font-weight bold
  
.todo
  background #FDD
  border 1px solid red
  padding .5em
  color red

// lists
main
  ol, ul
    margin 1em 0 1em 2em
    
  li
    margin .5em 0

@import "code"
// @import "code-dark"

table
  border-collapse separate
  border-spacing 0
  table-border-radius 2px 2px 2px 2px

th
  background $wine
  color #FFF
    
tbody
  > tr > :first-child
    border-left 1px solid #CCC
  
  > tr > :last-child
    border-right 1px solid #CCC
  
  > tr:last-child > *
    border-bottom 1px solid #CCC

td
  padding .2em .5em

kbd
  background #DDD
  box-shadow 0 0 1px inset #0002
  padding 1px 2px
