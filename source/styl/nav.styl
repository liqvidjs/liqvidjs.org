$top-nav-height = 3rem

// navigation
nav.primary
  background darken($blue, 80%)
  color #FFF
  padding 0 1em
  width 100%
  top 0
  left 0
  z-index 1
  height $top-nav-height
  
  position fixed
  
#brand
  display inline-block
  color #FFF
  font-size 1.2em
  font-weight bold
  margin-right 1em
  vertical-align middle
  padding-top 0
  padding-bottom 0

#logo
  height 1.4em
  margin-right .5em
  vertical-align middle
  
nav.primary > :link, nav.primary > :visited
  color #FFF
  height 100%
  line-height $top-nav-height
  display inline-block
  padding 0 1em
  transition color 0.2s ease-out
  vertical-align middle
    
  &:hover
    color $wine
  
  &[href^="https://github.com"]::before
    content none
    height 0
    width 0
    background-size 0 0
    margin 0
